// Place your settings in this file to overwrite default and user settings.
{
    "workbench.editor.enablePreview": false,
    "workbench.iconTheme": "vscode-icons",
    "editor.renderWhitespace": "all",
    "workbench.colorTheme": "Monokai",
    "files.exclude": {
        "**/.svn": true,
        "**/*.meta": true,
		".gitattributes": true,
		".gitignore": true
    },
    "files.associations": {
        "**/*.bytes": "lua",
        "*.bytes": "lua"
    },
    "editor.detectIndentation": true,
    "editor.insertSpaces": false,
    "editor.tabSize": 4,
    "luaide.requireFunNames": [
		"require",
		"import",
		"JRequire"
    ],
    "luaide.automaticDownloadingDebugFile": false,
    "luaide.luaDebugFileName": "LuaDebug.bytes",
    "luaide.luaDebugjitFileName": "LuaDebugjit.bytes",
    "luaide.apiType": "xlua",
    "luaide.maxFileSize": 20480,
    "luaide.luaTemplatesDir": "${workspaceRoot}/luaTemplatesDir"
}