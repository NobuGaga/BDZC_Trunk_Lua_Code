		end
	end

	local showData = nil

	local StoryBack = function()
		if showData ~= nil then
			local peopleData =  Csv.WharfPeople[showData.peopleId]
			if showData.meet == peopleData.meetUnlock then
				_P.ShowGirl(peopleData.girlId, _P.ShowMeetGirl(self))
			else
