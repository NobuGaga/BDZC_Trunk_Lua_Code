local WindowBase = JRequire "Libs.WindowMgr.WindowBase"
local WindowType = JRequire "Libs.WindowMgr.WindowType"
local SoundMgr = JRequire "Libs.Sound.SoundMgr"
local CCommon = JRequire "Dev.Common.CCommon"

local _M = Class(WindowBase)
local _P = {}
local _R = {}

--删除界面前调用
function _M:EndDestroy( ... )
	if self.CallBack ~= nil then
		self.CallBack()
	end
end

function _M:BeforeDestroy( ... )
	if self.MovieCom ~= nil then
		self.MovieCom:Stop()
		self.MovieCom = nil
	end
end

function _M:Dispatch(funcName, ...)
	local fun = _R[funcName]
	if fun ~= nil then 
		fun(self, ...)
	end
end

function _M:OnCreate(movieUrl, framCount, dura, passTime, doneCallBak)
	self.CallBack = doneCallBak

	local moudle = self:CreateMoudle(self._RootNode, "M_StartMovie")
	self.mModule = moudle
	moudle:Get("PassBG"):AddOnButton(function ( ... )
		-- SoundMgr.Play(10002)
		-- self:Destroy()

		if framCount ~= nil and framCount > 0 then
			if passTime ~= nil and passTime > 0 and self.MovieCom ~= nil and self.MovieCom.MoviePlayer ~= nil then
				self.MovieCom.MoviePlayer.time = passTime
				-- self.MovieCom.MoviePlayer.frame = framCount - 1
			else
				self:Destroy()
			end
		else
			self:Destroy()
		end
	end, nil, 1.2)
	
	moudle:Get("PassText").Text = Csv.Text("guide_pass")
	local movieNode = moudle:Get("MovieNode")
	self.MovieCom = CS.JGuiMovie.PlayMovie(movieNode, movieUrl, 750, 1334, framCount, dura, function()
		self:Destroy()
	end)
end

return _M