function _M.Clean( ... )
	if _M.isRefreshTime then
		EventCenter.UnRegistCallEvent(_M.RefreshHandle )
	end

	_M.InitData = nil
	_M.FightData = nil
	_M.ReportData = nil
	_M.AppealStaffTable = {}		--今天已使用过的员工（上诉）
	_M.RevengeStaffTable = {}		--今天已使用过的员工（诉讼）
	_M.AdverData = nil
	_M.DefenseData = nil
