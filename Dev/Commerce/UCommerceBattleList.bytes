----------------------文件引用--------------------------
--@RefType [Libs.WindowMgr.WindowBase.bytes#_M]
local WindowBase = JRequire "Libs.WindowMgr.WindowBase"
--@RefType [Libs.WindowMgr.WindowOpen.bytes#_M]
local WindowOpen = JRequire "Libs.WindowMgr.WindowOpen"
--@RefType [Dev.Commerce.CCommerce.bytes#_M]
local CCommerce = JRequire "Dev.Commerce.CCommerce"
--@RefType [Dev.Commerce.MCommerce.bytes#_M]
local MCommerce = JRequire "Dev.Commerce.MCommerce"
--@RefType [Dev.Common.CCommon.bytes#_M]
local CCommon = JRequire "Dev.Common.CCommon"
local SoundMgr = JRequire "Libs.Sound.SoundMgr"

----------------------常量定义--------------------------

--外部接口模块 *** 只放置共有接口, 禁止放变量
local _M = Class(WindowBase)
--私有函数模块 *** 只放置私有函数, 禁止放变量
local _P = {}
--外部刷新接口 *** 只放置外部Call的接口, 禁止放变量
local _R = {}

local BTN_STR1 = "ty_024_1"
local BTN_STR2 = "ty_024_5"

function _R.UpdateBattle(self, info)
	local battleId = info.id
	local csv = Csv.CommerceBattle[battleId]
	local oneMoudle = self.Battles[battleId]
	if info.state == MCommerce.BattleState.Close then
		oneMoudle:Get("Bar").FillAmount = 1
		oneMoudle:Get("bloodText").Text = "100%"
		oneMoudle:Get('C_Btn_e').Activity = false
		oneMoudle:Get("C_text").Text = Csv.Text("commerce_battle6")
		oneMoudle:Get('C_Btn_b'):AddOnButton(function()
			SoundMgr.Play(10001)
			WindowMgr.Create("UCommerceBattleOpen", battleId)
		end)
		oneMoudle:Get("C_Btn_b").SpriteName = BTN_STR2
	elseif info.state == MCommerce.BattleState.Doing then
		oneMoudle:Get("Bar").FillAmount = info.blood / csv.blood
		local endValue = (info.blood / csv.blood) * 100
		local per = math.floor(endValue + 0.5)
		if per == 0 and endValue > 0 then
			per = 1
		end
		oneMoudle:Get("bloodText").Text = per .. "%"
		oneMoudle:Get('C_Btn_e').Activity = false
		oneMoudle:Get("C_text").Text = Csv.Text("commerce_battle16")
		oneMoudle:Get('C_Btn_b'):AddOnButton(function()
			SoundMgr.Play(10001)
			--WindowMgr.Create("UCommerceBattle",battleId)
			CCommerce.BattleBattleReq(battleId)
		end)
		oneMoudle:Get("C_Btn_b").SpriteName = BTN_STR1
	elseif info.state == MCommerce.BattleState.Killed then
		oneMoudle:Get("Bar").FillAmount = 0
		oneMoudle:Get("YST").Text = Csv.Text("commerce_battle5")
		oneMoudle:Get('C_Btn_b').Activity = false
		oneMoudle:Get("C_text_0").Text = Csv.Text("commerce_battle7")
		oneMoudle:Get('C_Btn_e'):AddOnButton(function()
			SoundMgr.Play(10001)
			WindowMgr.Create("UCommerceBattleReport",battleId)
		end)
	elseif info.state == MCommerce.BattleState.End then
		oneMoudle:Get("Bar").FillAmount = info.blood / csv.blood
		oneMoudle:Get("YST").Text = ''
		oneMoudle:Get('C_Btn_b').Activity = false
		oneMoudle:Get("C_text_0").Text = Csv.Text("commerce_battle7")
		oneMoudle:Get('C_Btn_e'):AddOnButton(function()
			SoundMgr.Play(10001)
			WindowMgr.Create("UCommerceBattleReport",battleId)
		end)
	end
end

function _R.OnBattleList(self, data)
	local moudle = self.Moudle
	local content = moudle:Get("content")
	content:DestroyChildren()
	self.Battles = {}
	if data ~= nil and data.list ~= nil then
		local list = _P.GetSortList(data.list)
		for _,info in pairs(list) do
			local battleId = info.id
			local oneMoudle = self:CreateMoudle(content, "M_Gang_FB_Item")
			local csv = Csv.CommerceBattle[battleId]
			oneMoudle:Get("bg").SpriteName = csv.iconBg
			oneMoudle:Get("bsx").SpriteName = csv.icon
			oneMoudle:Get("BossName").Text = csv.name
			oneMoudle:Get("rewardTitle").Text = Csv.Text("commerce_battle3")
			oneMoudle:Get("RewardText").Text = Csv.Text("commerce_battle14", {num = csv.reward1})
			oneMoudle:Get("Experience").Text = Csv.Text("commerce_battle15", {num = csv.reward2})
			self.Battles[battleId] = oneMoudle
			_R.UpdateBattle(self, info)
		end
	end
end

function _P.GetSortList(rawTable)
	local sortTable = {}
	if rawTable ~= nil then
		for k,v in pairs(rawTable) do
			table.insert(sortTable,v)
		end
		table.sort(sortTable,function(a,b) return a.id < b.id end)
	end
	return sortTable
end

--外部调用派发器
function _M:Dispatch(funcName, ...)
	local fun = _R[funcName]
	if fun ~= nil then 
		fun(self, ...)
	end
end

--界面构建
function _M:OnCreate()
	CCommerce.BattleInfoReq()
	self.Battles = {}
	local moudle = self:CreateMoudle(self._RootNode, "M_Gang_FB")
	self.Moudle = moudle
	moudle:Get("C_Back_Btn"):AddOnButton(function ( ... )
		SoundMgr.Play(10002)
		self:Destroy()
	end, nil, 1.2)
	moudle:Get("C_Text").Text = Csv.Text("commerce_battle1")
	moudle:Get("KEYONH").Text = Csv.Text("commerce_battle2")
	moudle:Get("Tips").Text = Csv.Text("commerce_battle4")
end

return _M