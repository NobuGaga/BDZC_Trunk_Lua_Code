function _R.ResetFortune(self)
	local fortuneImages = self.mFortuneImages
	local fortune =  MWharf.fortuneValue  --拿数据
	for k,v in pairs(fortuneImages) do
		if k<=math.floor(fortune/10) then
			v.IsGray = false
		else
			v.IsGray = true
		end
	end
end

