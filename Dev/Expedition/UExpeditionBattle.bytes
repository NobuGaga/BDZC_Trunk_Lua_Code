function _M:Dispatch(funcName, ...)
	local fun = _R[funcName]
	if fun ~= nil then 
		fun(self, ...)
	end
end

function _R.RepMeetingFight(self,data)
	self.IsNeedRefreshNext = true
	_P.StartFight(self,data.fightInfo,function()
		--战斗结束
		WindowMgr.Create("UExpeditionResult", data.fightInfo.result, data.award,data.addscore, function( ... )
			self:Destroy()
		end, data.id)
	end)
end

function _R.RefreshReset(self)
	if not self.IsStart then
		self:Destroy()
	end
end

function _M:BeforeDestroy()
	if self.SkillWin ~= nil then
		self.SkillWin:delete()
		self.SkillWin = nil
	end
	if self.IsNeedRefreshNext then
		WindowMgr.Call("UExpedition","RefreshNext")
	end
end

