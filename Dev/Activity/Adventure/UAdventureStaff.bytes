function _P.SetAskStaffList(self)
	local contentTransform = self.mModule:Get("StaffContent")
	contentTransform:DestroyChildren()

	local reqstaffDatas = _P.GetReqStaffs(self)
	for index=1,#reqstaffDatas do
		self.mReqTableItems[index] = _P.OnCreateAskItem(self,reqstaffDatas[index],contentTransform,index)
	end
end

function _P.OnCreateAskItem(self,data,contentTransform,index)
	local reqStaff = {}
	local itemMoudle = JGuiManager.GetMoudle(contentTransform, "M_Staff_AdvItem", WindowType.UI, 0)
	local icon = itemMoudle:Get("Icon")
	icon.SpriteName = DEFAULT_ICON
	for i=1,5 do
		itemMoudle:Get("Z"..i..i).Activity = false
		itemMoudle:Get("Gou"..i).Activity = false
	end
	_P.SetReqDetail(data.attrInfo,itemMoudle,nil)
	icon:AddOnButton(function(...)
		-- print("点击了格子ID",LuaUtil.DumpTable(self.mReqTableItems[index]))
		_P.SetOwnStaffList(self,data.attrInfo,index)
		self.Top:DOAnchorPosY(TOP_END, 0.2)
		self.Buttom:DOAnchorPosY(BUTTOM_END, 0.2)
	end,nil,1.2)

	reqStaff.module = itemMoudle
	return reqStaff
end

--设置要求参数
function _P.SetReqDetail(data, module,staffData)
	for i=1, #data do
		if data[i].type <= 4 then
			module:Get("Z"..data[i].type..data[i].type).Activity = true
			--自己的员工属性
			if staffData ~= nil then
				local val = MStaff.GetAttrByType(staffData.id,data[i].type)
				module:Get("Num"..data[i].type).Text = val
				module:Get("Gou"..data[i].type).Activity = val >= data[i].val
			else
				module:Get("Num"..data[i].type).Text = data[i].val
			end
		elseif data[i].type == MActivity.AdvReqTypeEnum.Sex then
			if staffData ~= nil then
				module:Get("Name").Text = MStaff.GetStaffName(staffData.id)
			elseif data[i].val == MActivity.AdvSexEnum.Man then
				module:Get("Name").Text = Csv.Text("adventure_sex_man")
			else
				module:Get("Name").Text = Csv.Text("adventure_sex_female")
			end
		elseif data[i].type == MActivity.AdvReqTypeEnum.Nationality then
			if staffData ~= nil then
				module:Get("Name").Text = MStaff.GetStaffName(staffData.id)
			elseif data[i].val == 1 then
				module:Get("Name").Text = Csv.Text("adventure_nation_chinese")
			else
				module:Get("Name").Text = Csv.Text("adventure_nation_alia")
			end
		elseif data[i].type == MActivity.AdvReqTypeEnum.Age then
			if staffData ~= nil then
				module:Get("Name").Text = MStaff.GetStaffName(staffData.id)
			else
				module:Get("Name").Text = Csv.Text("adventure_age",{age = data.val})
			end
		elseif data[i].type == MActivity.AdvReqTypeEnum.YuanGong then
			if staffData ~= nil then
				module:Get("Name").Text = MStaff.GetStaffName(staffData.id)
			else
				local name = MStaff.GetStaffName(data[i].val)
				module:Get("Name").Text = Csv.Text("adventure_work",{name = name})
			end
		elseif data[i].type == MActivity.AdvReqTypeEnum.Job then

		end
	end
end

